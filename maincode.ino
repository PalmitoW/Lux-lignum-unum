byte * Wheel2(byte WheelPos2) {
  static byte c[3];
  
  if(WheelPos2 < 85) {
   c[0]=WheelPos2 * 3;
   c[1]=255 - WheelPos2 * 3;
   c[2]=0;
  } else if(WheelPos2 < 170) {
   WheelPos2 -= 85;
   c[0]=255 - WheelPos2 * 3;
   c[1]=0;
   c[2]=WheelPos2 * 3;
